<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    >


    <ImageView
        android:layout_width="25dp"
        android:src="@drawable/username"
        android:layout_height="25dp"
        android:id="@+id/imageViewName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageViewPass"
        android:layout_marginTop="15dp"
        android:src="@drawable/email"
        android:layout_below="@+id/imageViewName"
        android:layout_alignLeft="@+id/imageViewName"
        android:layout_alignStart="@+id/imageViewName" />







    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:src="@drawable/password"
        android:layout_below="@+id/imageViewPass"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/imageViewPass"
        android:layout_alignStart="@+id/imageViewPass" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView3"
        android:src="@drawable/birthday"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/button2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/buttonContinue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:background="@color/yellow"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/termsOfUse"
        android:textSize="13dp"
        android:textColor="@color/textColor"
        android:alpha="0.5"
        android:id="@+id/textViewCondition"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonContinue"
        />
</RelativeLayout>
</RelativeLayout>
 </ScrollView>